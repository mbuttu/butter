{
  "name": "fivel",
  "title": "Popcorn Maker",
  "template": "index.html",
  "baseDir": "../../",
  "savedDataUrl": "saved-data.json",
  "editor": {
    "quiz": "{{baseDir}}templates/fivel/editors/quiz-editor.js",
    "toc": "{{baseDir}}templates/fivel/editors/toc-editor.js"
  },
  "plugin": {
    "plugins": [
      {
        "type": "quiz",
        "path": "{{baseDir}}templates/fivel/plugins/popcorn.quiz.js"
      },
      {
        "type": "text",
        "path": "{{baseDir}}external/popcorn-js/plugins/text/popcorn.text.js"
      },
      {
        "type": "repeat",
        "path": "{{baseDir}}templates/assets/plugins/repeat/popcorn.repeat.js"
      }
    ],
    "defaults" : [
      "quiz",
      "text",
      "repeat"
    ]
  },
  "toc": {
    "target": "Area2",
    "sections": [{
      "time": "00:00",
      "title": "Intro",
      "description": "This is the introduction."
    },
    {
      "time": "00:05",
      "title": "Section 2",
      "description": "This is the second section."
    },
    {
      "time": "00:10",
      "title": "Section 3",
      "description": "This is the third section"
    }]
  }
}
